<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_producto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:src="@drawable/baseline_image_24"
        android:background="@drawable/bg_image_rounded" />

    <RelativeLayout
        android:id="@+id/contenedor_textos"
        android:layout_toEndOf="@id/img_producto"
        android:layout_alignTop="@id/img_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/txt_nombre_producto"
            tools:text="Coca Cola 600ml"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/butonOpciones" />

        <TextView
            android:id="@+id/txt_codigo_producto"
            tools:text="CÃ³digo: 00123"
            android:layout_below="@id/txt_nombre_producto"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_precio_producto"
            tools:text="precio u: Q 5.00"
            android:layout_below="@id/txt_codigo_producto"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_stock_producto"
            tools:text="Stock: 25"
            android:layout_below="@id/txt_precio_producto"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_estado_producto"
            tools:text="Activo"
            android:layout_below="@id/txt_stock_producto"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
        android:backgroundTint="@color/white"
        android:layout_centerVertical="true"
        android:id="@+id/butonOpciones"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outline_more_vert_24"/>

    </RelativeLayout>
</RelativeLayout>