<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btnCalendario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_calendar_today_24"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Contador -->
    <TextView
        android:id="@+id/txtUnreadCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="No leídos: 0"
        android:visibility="gone"
        android:textStyle="bold"
        android:background="#FFECECEC" />

    <!-- Lista de mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Texto cuando no hay mensajes -->
    <TextView
        android:id="@+id/txtEmptyChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="No hay mensajes todavía"
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Reply -->
    <LinearLayout
        android:id="@+id/layoutReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEEEEEE"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtReplyUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Usuario" />

            <TextView
                android:id="@+id/txtReplyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Texto original" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCancelReply"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F8F8F8"
        android:elevation="3dp">

        <EditText
            android:id="@+id/txtMensaje"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_input"
            android:hint="Escribe un mensaje..."
            android:padding="12dp"
            android:textSize="16sp"
            android:maxLines="4"
            android:gravity="center_vertical"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/btnEnviar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_send_button"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#FFFFFF" />
    </LinearLayout>

</LinearLayout>