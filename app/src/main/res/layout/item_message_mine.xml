<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="14dp"
        card_view:cardElevation="2dp"
        android:backgroundTint="#C8F7C5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- PREVIEW DEL MENSAJE RESPONDIDO -->
            <LinearLayout
                android:id="@+id/layoutReplyPreview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/bg_reply_preview"
                android:layout_marginBottom="4dp">

                <TextView
                    android:singleLine="true"
                    android:id="@+id/txtReplyPreviewUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#2E7D32"
                    android:text="Usuario" />

                <TextView
                    android:id="@+id/txtReplyPreviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#444444"
                    android:textSize="10sp"
                    android:text="Mensaje original..." />
            </LinearLayout>

            <!-- Nombre -->
            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:textSize="11sp"
                android:layout_marginBottom="2dp"
                android:text="Yo" />

            <!-- Mensaje -->
            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                android:text="Mensaje de prueba" />

            <!-- Hora -->
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:45 PM"
                android:textSize="9sp"
                android:textColor="#656565"
                android:layout_gravity="end" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>